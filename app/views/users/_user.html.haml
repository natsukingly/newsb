.user{class: "clearfix user_#{user.id}"}
	.user_image
		=user_image_helper(user)
	=link_to user, class: "info" do
		%p.name
			%span
				=user.name
			= user.credential
		%p.follower_stats 
			FOLLOWER: #{user.followers.count} 
			%span 
				FOLLOWING: #{user.following.count}
	.follow_link
		=render "/shared/follow_form", user: user
