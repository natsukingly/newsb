.sns_block.facebook
	.sns_title
		.sns_icon.of_facebook
			%i.fa.fa-facebook
		%span
			FACEBOOK
	-if user.social_profile(:facebook)
		-if user.facebook_post == true
			.sns_link
				=link_to "SHARING", unshare_facebook_snss_path(user.id), class: "sns_btn unshare", method: :post, remote: true
		-else
			.sns_link
				=link_to "SHARE", share_facebook_snss_path(user.id), class: "sns_btn share", method: :post, remote: true
	-else
		.sns_link
			=link_to "CONNECT", user_facebook_omniauth_authorize_path, class: "sns_btn connect"

			
		
		
