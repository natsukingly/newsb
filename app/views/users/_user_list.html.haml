.user_list_item{class: "clearfix user_#{user.id}"}
	=link_to image_tag(user.image.profile_sm.url, class: "img-circle"), user, class: "image"
	=link_to user, class: "info" do
		%p.name
			%span
				=user.name
			= user.shoulder_name
		%p.follower_stats 
			FOLLOWER: #{user.followers.count} 
			%span 
				FOLLOWING: #{user.following.count}
		%p= universal_truncate(user.about, 80)
		

	.follow_link
		=render "/shared/follow_form", user: user
