.sub_function_wrapper.tags
	.sub_function_main_section
		.sub_function_nav
			%h2
				NOTIFICATION

		#main_contents.notifications
			-if current_user.notifications.empty?
				.notification_empty
					You haven't received any notifications yet.
			-else        
				- current_user.notifications.includes(:target_user).order(created_at: :desc).each do |notification|
					=link_to notification.path, class: "notification" do
						.user_image
							=user_image_helper(notification.target_user)
						.content
							=notification.message.html_safe
							%p
								#{time_ago_in_words(notification.created_at)} ago
	
	.sub_function_sidebar
		%h2
			NEW USERS
		.new_users_section
			-unless @new_users.empty?
				= render partial: "users/card", collection: @new_users, as: :user



