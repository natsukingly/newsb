%ul.text-center
	-if user_signed_in?
		%li
			-if Favorite.find_by(user_id: current_user.id, tag_id: tag.id)
				= link_to unfavorite_tag_path(tag.id), method: :delete, class: "unfavorite", remote: true do
					=render 'svg/check_icon'
				
			-else
				= link_to favorite_tag_path(tag.id), method: :post, class: "favorite", remote: true do
					=render 'svg/plus_icon_circle'