- unless current_user.id == user.id
  -if Relationship.find_by(follower_id: current_user.id, following_id: user.id)
    =link_to "/#{user.id}/unfollow_icon", remote:true, method: :post, class: "follow" do
      =render 'svg/follow_icon_html'
  -else
    = link_to "/#{user.id}/follow_icon", remote: true, method: :post, class: "unfollow" do
      =render 'svg/unfollow_icon_html'
