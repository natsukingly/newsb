-if current_user
	#mobile_profile_option_ddm.ddm
		.mobile_profile_option_ddm_wrapper.ddm_wrapper
			.title_block
				%h2
					=current_user.name
				.close_ddm_btn
					=render 'svg/close_icon'
			=link_to "Profile", current_user, class: "profile_option" 
			=link_to "Setting", edit_setting_user_path(current_user.id), class: "profile_option"
			=link_to "About", about_page_path, class: "profile_option", target: "_blank"
			=link_to "Contact", contact_page_path, class: "profile_option", target: "_blank"
			=link_to "Terms", terms_page_path, class: "profile_option", target: "_blank"
			=link_to "Logout", destroy_user_session_path, class: "profile_option" 
			.profile_option
				&copy; 2017 NEWSB
			
:javascript
	
	$('#mobile_profile_option_link').click(function () {
		$(".ddm").hide();
		$('#mobile_profile_option_ddm').css("display", "block");
		$('body').addClass('fixed');
		return false;
	});

	
	$('.close_ddm_btn').click(function (event) {
		$('#mobile_profile_option_ddm').hide();
		$('body').removeClass('fixed');
	});
