
.sns_block_small.facebook
	-if facebook_post == true
		=link_to unshare_facebook_snss_path(current_user.id), class: "sns_connect_btn facebook unshare", method: :post, remote: true do
			%i.fa.fa-facebook
	-else
		-if !(current_user.social_profile(:facebook))
			.sns_connect_btn.facebook.locked
				%i.fa.fa-facebook
				%span
					%i.fa.fa-lock
				=render 'dropdown/unlock_sns'
		-else
			=link_to share_facebook_snss_path(current_user.id), class: "sns_connect_btn facebook share", method: :post, remote: true do
				%i.fa.fa-facebook

