-if user
	.sns_block_small
		-if user.facebook_post == true
			=link_to unshare_facebook_snss_path(user.id), class: "sns_connect_btn facebook unshare", method: :post, remote: true do
				%i.fa.fa-facebook
		-else
			-if !(user.social_profile(:facebook))
				=link_to root_path, class: "sns_connect_btn facebook connect" do
					%i.fa.fa-facebook
			-else
				=link_to share_facebook_snss_path(user.id), class: "sns_connect_btn facebook share", method: :post, remote: true do
					%i.fa.fa-facebook

	.sns_block_small
		-if user.twitter_post == true
			=link_to unshare_twitter_snss_path(user.id), class: "sns_connect_btn twitter unshare", method: :post, remote: true do
				%i.fa.fa-twitter
		-else
			-if !(user.social_profile(:twitter))
				=link_to root_path, class: "sns_connect_btn twitter connect" do
					%i.fa.fa-twitter
			-else
				=link_to share_twitter_snss_path(user.id), class: "sns_connect_btn twitter share", method: :post, remote: true do
					%i.fa.fa-twitter

