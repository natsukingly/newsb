
- if cookies[:personalized_tags]
  - personalized_tags.each do |tag|
    =label_tag do
      .tag_pill
        - if cookies[:search_preference]
          - if cookies[:search_preference].include?((tag.id).to_s)
            =check_box_tag "tag_ids[]", tag.id, true, style: "display: none;"
          - else
            =check_box_tag "tag_ids[]", tag.id, false, style: "display: none;"
        - else
          =check_box_tag "tag_ids[]", tag.id, false, style: "display: none;"
        .tag_content.give_me_short_ellipsis
          = tag.name    
  =link_to "reset", '/posts/reset_personalized_tags', remote: true, id: :reset_tags_btn