.sidebar_wrapper
	-if current_user
		.profile
			.user_info
				.name
					%h2
						=link_to user.name, user_path(user.id)
					%h3.shoulder_name.grey= user.shoulder_name
		
			.stats
				%h2.section_title.stats
					=render 'svg/stats_icon'
					%span
						Stats
				.stats_item
					%p 
						Posts:
						%span 
							= user.posts.count
				.stats_item
					%p	
						Follower:
						%span 
							= user.followers_count
				.stats_item
					%p
						Following:
						%span 
							= user.following_count
			.like_stats
				%h2.section_title.like
					=render 'svg/like_icon'
					%span
						Likes
					
				%p 
					Week: #{user.weekly_liked_count}
					// %span= Like.where(target_user_id: current_user.id).where(created_at: 48.hours.ago..Time.now).count
		
				%p 
					ALL-TIME: #{user.liked_count}
					
			#favorite_tags
				%h2.section_title.tag
					=render 'svg/tag_icon_circle'
					%span
						Favorite Tags
				.favorite_tags_block
					-unless user.favorites.empty?
						-user.favorites.includes(:tag).each do |favorite|
							%p.tag
								=link_to "\##{favorite.tag.name}",tag_path(favorite.tag.name)
					=link_to "check trending tags", tags_path, class: "tags_link"
				
	-else
		.profile.not_signed_in
			.user_info
				.name
					%h2
						No account
					= link_to "signupãƒ»login", user_facebook_omniauth_authorize_path, class: "login_link"
		
			.stats
				%h2.section_title.stats
					=render 'svg/stats_icon'
					Stats
				.stats_item
					%p 
						Posts: -
				.stats_item
					%p	
						Follower: -
				.stats_item
					%p
						Following: -
			.like_stats
				%h2.section_title
					=render 'svg/like_icon'
					%span
						Likes
					
				%p 
					Week: -
				%p 
					ALL-TIME: -
			
					
	
	
				

				
		
			
			
		