
-if current_user
  = form_tag comments_path, remote: true do
    .field.form-group.form_textarea.comment_textarea
      .user_image_sm
        =user_image_helper(current_user)
      = text_area_tag 'comment[content]', "", placeholder: "#{t ('form.comment.placeholder')}", class: "form-control form_content", style: "box-shadow: none; resize: none;"
      = hidden_field_tag 'comment[post_id]', post.id
    .comment_submit
      = submit_tag "#{t ('form.comment.submit')}", class: "submit_btn btn"
      .cancel_btn
        =t ('form.comment.cancel')
        
      
   

