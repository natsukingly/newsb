#index_nav{class: "#{@category.name}"}
	=link_to articles_category_path(@category.id) do
		.news_btn.active
			=render 'svg/news_icon'
			%span
				news
	=link_to posts_category_path(@category.id) do
		.feed_btn
			=render 'svg/feed_icon'
			%span
				feed
				 
#main_contents.articles
	=render @articles


	