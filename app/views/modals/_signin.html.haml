.signin_modal_block.modal_block
	#continue_with_social_account_block
		.modal_title
			%h2
				Hi, welcome to newsbie!!
		.social_signin_links
			= link_to user_facebook_omniauth_authorize_path do
				.facebook_signin_btn
					%i.fa.fa-facebook
					Continue with facebook
		
		.non_social_link
			%p or
			= form_for(resource, as: resource_name, url: session_path(resource_name), id: "signin_with_email") do |f|
				.field
					=f.label :email
					=f.email_field :email, autofocus: true
			
				.field
					= f.label :password
					= f.password_field :password, autocomplete: "off"
			
				.actions
					= f.submit "Log in"

			%h2
				%span#email_signup_link 
					Continue with Email
				By signing up, you indicate that you have read and agree to the Terms of Service and Privacy Policy.
				
	#signup_with_email_block
		.modal_title
			%h2
				Hi, welcome to newsbie!!
		.non_social_link
			= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "signup_with_email") do |f|
				.field
					=f.label :email
					=f.email_field :email, autofocus: true
			
				.field
					= f.label :password
					= f.password_field :password, autocomplete: "off"
			
				.actions
					= f.submit "Sign up"							

			%h2
				%span#email_signup_link 
				By signing up, you indicate that you have read and agree to the Terms of Service and Privacy Policy.		
				
	
	.close_modal_btn
		=render 'svg/close_icon'

:javascript

	
	$('.login_signup_link').click(function () {
		if("#{current_user}" == false){
			$(".ddm").hide();
			$('#signin_modal').fadeIn();
			$('body').addClass('fixed');
			return false;
		}
	});

	$('#signin_modal').click(function (event) {
		if(!$(event.target).closest('.signin_modal_block').length && !$(event.target).is('.signin_modal_block')) {
			$("#signin_modal").hide();
			$('body').removeClass('fixed');
			return false;
		}     
	});
	
	$('.close_modal_btn').click(function (event) {
		$("#signin_modal").hide();
		$('body').removeClass('fixed');
	});

	$('#email_signup_link').click(function(){
		$('#continue_with_social_account_block').hide();
		$('#signup_with_email_block').show();
	});
	
	$('#cancel_email_signup_link').click(function(){
		$('#continue_with_social_account_block').show();
		$('#signup_with_email_block').hide();
	});
	
	
