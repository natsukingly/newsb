
=link_to article_path(article.id), class: "article article_#{article.id} clearfix" do
	.image_box
		.image{style: "background-image: url(#{article.image.url});"}
			.status
				%i.fa.fa-comments-o
				#{article.posts_count} 
				\/
				%i.fa.fa-thumbs-o-up
				#{article.likes_count}

	.info
		.title
			%h2.bold.lg
				= truncate(article.title, length: 60) do
					%span ...
			%p.sm.grey
				= article.source
				- if article.published_time
					#{time_ago_in_words(article.published_time)} ago
		.best_post
			-post = article.posts.last
			
			- if post != nil
				.body
					.content.clearfix
						.user_block.clearfix
							=image_tag post.user.image.url, class:"pull-left img-circle user_image"
							.user_details
								%p.give_me_short_ellipsis
									%span.bold.sm
										=post.user.name
									%span.user_shoulder_name.xs.grey
										=post.user.shoulder_name
								%p.sm
									= truncate(post.content, length: 60) do
										%span ...
		
	.related_posts

						
