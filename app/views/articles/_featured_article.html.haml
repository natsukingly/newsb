
%div{ class: "article_#{article.id}", id: "featured_article"}
	.article_wrapper.image{style: "background-image: url(#{article_image_helper article.image.url});"}
		.overlay
			.article_container	
				.featured_article_content
					%h2.featured_article_title
						=link_to universal_truncate(article.title, 100), article_path(article)
						%br
						%span.featured_article_source
							= article.source
							- if article.published_time
								%i.fa.fa-clock-o
								#{time_ago_in_words_short(article.published_time)}	
				
					-report_count = article.posts.where(fake_news_report: true).count
					%span.posts_count
						#{article.posts_count} posts
					-if report_count != 0
						%sapn
							[ #{report_count} fake news reports ]	
							
					.featured_article_bottom
						=link_to article_path(article), class: "featured_article_image" do
							.image{style: "background-image: url(#{article_image_helper article.image.url});"}
								.frame
									%i.fa.fa-mouse-pointer
										
						.featured_article_options
							=link_to article_path(article) do 
								%span
									POSTS & COMMENTS
						-unless best_post.nil?
							.best_post
								.user_image_sm
									=user_image_helper(best_post.user)
								.best_post_body
									%p.user_info.give_me_short_ellipsis
										#{best_post.user.name} / #{best_post.user.credential}
									%p.best_post_content.give_me_ellipsis
										-if best_post.content.empty?
											%span.shared_message
												> Shared this article
										-else
											%span.comment_large
												= best_post.content
												
												
				.featured_article_sidebar			
					-unless related_articles.empty?
						.related_articles
							%ul.related_article_section 
								- related_articles.each do |article|
									%li
										%h4
											=link_to article.title, article_path(article)
										%p
											=article.source
										
							
						

											

									

					
