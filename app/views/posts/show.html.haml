.index_container.@posts
  .@post{class: "@post_#{@post.id}"}
    =link_to @post.article_url do
      .p_top.hidden-xs
        .p_article_title= @post.article_title
        .p_article_site= @post.article_site
      .m_p_top.clearfix.visible-xs
        .m_p_article_title.pull-left{style: "width: 80%;"}
          .p_article_title.give_me_ellipsis= @post.article_title
          .p_article_site= @post.article_site
        .m_p_article_image.pull-right{style: "background-image:url(#{@post.article_image.index.url});"}
      .p_body
        .p_content.clearfix
          .p_content_main.pull-left
            =render '/shared/user_profile', user: @post.user, object: @post
            =render_with_hashtags(simple_format(@post.content))
            .p_status
              .like_link
                =render '/likes/like_@post', @post: @post
              .comment_link
                %i.fa.fa-comment-o 
                =@post.comments.count
              .comment_invite
                Comment
          =image_tag @post.article_image.index.url, class: "pull-right hidden-xs" 