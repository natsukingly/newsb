$('.scroll_btn').before('#{ escape_javascript(render @loaded_posts)}');
$('.scroll_btn').html("#{t('scroll.load')}");
$('.scroll_btn').removeClass('loading');
-if @loaded_posts.empty? || @loaded_posts.count < 30
    $('.scroll_btn').html("#{t('scroll.no_more')}");
    $('.scroll_btn').addClass('stop_loading');
    
loading = false;
