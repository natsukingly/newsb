-content_for(:sidebar) do
	"Don't show"

-content_for(:header) do
	"Don't show"

-content_for(:general) do
	"Do show"

:css
	body{ 
		background-color: white;
		padding: 0;
	}
	#mobile_footer{
		display: none;
	}


.header_general
	.header_general_container
		.header_general_menu_left
			=link_to "NEWSB!", root_path, class: "logo"
		
		.header_general_menu_right
			=link_to "ABOUT US", about_page_path, class: "header_general_option" 
		.header_general_menu_right_mobile
			.open_general_mobile_menu.in_white
				=render 'svg/menu_icon'

.general_wrapper#contact
	.general_container
		.general_title.top
			%h3
				Contact
			%span.hrz_dvd
		%p.contact_description
			NEWSBを使った感想やバグの報告、
			取材の申し込み等の内容をご自由に投稿ください。
		=render 'home/contact_form', contact: @contact